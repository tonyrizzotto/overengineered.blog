{
  "name": "@tonyrizzotto/overengineered.blog",
  "author": "Tony Rizzotto",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "start": "node ./server",
    "dev": "export NODE_ENV=local && nodemon ./server",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --outDir dist/server --ssr /index.js",
    "preview": "vite preview"
  },
  "engines": {
    "node": "^18.0.0"
  },
  "application": {
    "defaultSegment": "/r",
    "defaultLanding": "/r/",
    "gqlRoute": "/r/graphql"
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "server/"
    ],
    "ignore": [
      "node_modules"
    ],
    "verbose": true
  },
  "repository": {
    "url": "https://github.com/tonyrizzotto/overengineered.blog.git"
  },
  "dependencies": {
    "@emotion/cache": "^11.10.7",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@fastify/static": "^6.10.0",
    "@fastify/vite": "^4.0.0",
    "@graphql-tools/merge": "^8.4.1",
    "@graphql-tools/schema": "^9.0.18",
    "@mdx-js/rollup": "^2.3.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.12.1",
    "@vitejs/plugin-react": "^3.1.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.15.0",
    "graphql": "^16.6.0",
    "graphql-hooks": "^6.2.2",
    "graphql-tag": "^2.12.6",
    "mercurius": "^12.2.0",
    "mercurius-validation": "^4.0.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.4",
    "react-router-dom": "^6.10.0",
    "uuid": "^9.0.0",
    "vite": "^4.2.0",
    "vite-plugin-cjs-interop": "^0.0.8"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "eslint": "^8.38.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nodemon": "^2.0.22",
    "pino-pretty": "^10.0.0"
  }
}
